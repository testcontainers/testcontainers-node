{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/modules/kafka/test-certs/**/*"
  ],
  "references": [
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/logger"
    },
    {
      "path": "./packages/container-runtime"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/modules/*"
    }
  ]
}
