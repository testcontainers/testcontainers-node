{
  "name": "testcontainers",
  "author": "Cristian Greco",
  "version": "8.4.0",
  "main": "dist/index",
  "types": "dist/index",
  "keywords": [
    "docker",
    "testcontainers"
  ],
  "files": [
    "dist"
  ],
  "description": "Testcontainers is a NodeJS library that supports tests, providing lightweight, throwaway instances of common databases, Selenium web browsers, or anything else that can run in a Docker container.",
  "license": "MIT",
  "homepage": "https://github.com/testcontainers/testcontainers-node#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/testcontainers/testcontainers-node"
  },
  "bugs": {
    "url": "https://github.com/testcontainers/testcontainers-node/issues"
  },
  "scripts": {
    "prepare": "npm run build && husky install",
    "pre-commit": "lint-staged",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test": "cross-env DEBUG=testcontainers jest --runInBand",
    "format": "prettier --write package.json \"src/**/*.ts\"",
    "lint": "eslint --fix package.json \"src/**/*.ts\"",
    "updateDeps": "npx npm-check-updates -u"
  },
  "dependencies": {
    "@types/archiver": "^5.1.1",
    "@types/dockerode": "^3.2.7",
    "archiver": "^5.3.0",
    "byline": "^5.0.0",
    "debug": "^4.3.3",
    "docker-compose": "^0.23.17",
    "dockerode": "^3.3.1",
    "get-port": "^5.1.1",
    "glob": "^7.2.0",
    "properties-reader": "^2.2.0",
    "slash": "^3.0.0",
    "ssh-remote-port-forward": "^1.0.4",
    "tar-fs": "^2.1.1"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^7.14.1",
    "@types/byline": "^4.2.33",
    "@types/debug": "4.1.7",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.9.6",
    "@types/node-fetch": "^2.5.12",
    "@types/pg": "^8.6.4",
    "@types/properties-reader": "^2.1.1",
    "@types/tar-fs": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "arangojs": "^7.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "kafkajs": "^1.15.0",
    "lint-staged": "^11.1.4",
    "mysql2": "^2.3.3",
    "neo4j-driver": "^4.3.6",
    "node-fetch": "^2.6.7",
    "pg": "^8.7.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
